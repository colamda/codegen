{
  "compileOnSave": false,
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./cb-codegen",
    "noImplicitAny": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "jest"],
    "lib": ["es2017"]
  },
  "include": ["./src"],
  "exclude": ["node_modules", "tmp"]
}
