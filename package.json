{
  "name": "@colamda/codegen",
  "version": "1.0.11",
  "description": "Codegen library",
  "license": "MIT",
  "author": "Colamda GmbH",
  "scripts": {
    "app": "node bin/index.js",
    "clean": "rm -rf cb-codegen/",
    "prep-dir": "mkdir -p cb-codegen/ng/",
    "compile": "tsc",
    "compile.w": "tsc -w",
    "lint": "tslint --project tslint.json src/**/*.ts",
    "test": "jest",
    "copy-ng": "cp ./node_modules/@codebalancers/model-editor/dist/* cb-codegen/ng/",
    "build": "yarn run clean && yarn run prep-dir && yarn run copy-ng && yarn run lint && yarn run compile",
    "build.w": "yarn run clean && yarn run prep-dir && yarn run copy-ng && yarn run lint && yarn run compile.w"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__test__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "files": [
    "bin",
    "cb-codegen"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/colamda/codegen.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "cb-codegen/app/main.js",
  "bin": "./bin/index.js",
  "dependencies": {
    "@codebalancers/commons": "^1.0.9",
    "@codebalancers/logging": "^1.0.10",
    "ajv": "^6.12.0",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "lodash": "^4.17.15",
    "nunjucks": "^3.2.0",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "typescript-json-schema": "^0.42.0",
    "yargs": "^15.1.0"
  },
  "devDependencies": {
    "@codebalancers/model-editor": "^1.0.7",
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.2",
    "@types/jest": "^25.1.3",
    "@types/lodash": "^4.14.149",
    "@types/node": "13.7.7",
    "@types/nunjucks": "^3.1.3",
    "@types/prettier": "^1.19.0",
    "@types/rimraf": "^2.0.3",
    "@types/yargs": "^15.0.4",
    "copyfiles": "^2.2.0",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.6.2",
    "tslint": "^6.0.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "3.8.3"
  }
}
